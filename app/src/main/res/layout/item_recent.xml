<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        style="@style/cardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:background="@drawable/bg_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/a1"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_method"
                android:layout_width="70dp"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/method"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="GET"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/a1"
                android:layout_toLeftOf="@id/use"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://www.google.com/api/users"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorHiglight"/>
                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="timestamp: 15/12/1998 10:00pm"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <ImageView
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/use"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_open"
                app:tint="@color/colorHiglight"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>